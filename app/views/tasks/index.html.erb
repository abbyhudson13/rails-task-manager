<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <p>
    <%= if task.completed == true
      check_box_tag(task.title, task.title, checked = true, disabled: true)
        else
       check_box_tag(task.title, task.title, checked = false, disabled: true)
        end%>
       <%= link_to(task.title, task_path(task)) %>
   </p>
  <p><%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>

<% end %>
<%= link_to('Add a new task', tasks_new_path) %>


